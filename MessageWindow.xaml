<Window x:Class="MDPISensors.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDPISensors"
        mc:Ignorable="d"
        Title="MessageWindow" Height="300" Width="700" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Cursor="Wait">
    <Grid>
        <Label Content="Are you paying attention to the lecture?"  HorizontalAlignment="Center" Height="44" Margin="0,51,0,0" VerticalAlignment="Top" Width="558" FontSize="24"/>
        <Button Name = "YesButton" Content="Yes" HorizontalAlignment="Left" Height="40" Margin="85,175,0,0" VerticalAlignment="Top" Width="101" Click="YesButton_Click"/>
        <Button Name = "NoButton" Content="No" HorizontalAlignment="Left" Height="40" Margin="470,175,0,0" VerticalAlignment="Top" Width="101" Click="NoButton_Click"/>

    </Grid>
</Window>
